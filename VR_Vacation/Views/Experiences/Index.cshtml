@model IEnumerable<VR_Vacation.Models.ExperienceVm>

<div class="row">    
    <div class="container">     
        <div class="row">
            <h1>Optional Extras</h1>
            <div class="list-group">
                @foreach (var item in Model)
                {
                    <div class="list-group-item">
                        <div class="media">
                            <div class="media-left">
                                <img class="media-object" src="@item.ImagePath" width="145px" height="145px" alt="image" />
                            </div>
                            <div class="media-body">
                                <h2 class="media-heading">@Html.DisplayFor(model => item.Name)</h2>
                                <h7>@Html.DisplayFor(model => item.Description)</h7>
                                <p class="text-info">@Html.DisplayFor(model => item.Price) :- SEK</p>
                                <div style="display: none;" id="exp-@item.Id" class="addedExpToClass alert alert-success">
                                    <div></div>
                                </div>
                                <a value="@item.Id" class="addExpToCart btn btn-primary">Add to cart</a>
                                <a href="/ShoppingCart/Index" id="goToCart" class="btn btn-info">Go to cart</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>